@model CarRent.Models.ViewModels.WorkerPausesViewModel

@{
    ViewData["Title"] = "WorkerPausesHistory";
    Layout = "~/Views/Shared/ManageLayout.cshtml";
    double hoursSum = 0;
}

<div class="row">
    <div class="col-md-5 col-md-offset-4">
        <h2>Historia zwolnień i urlopów</h2>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <h3>Historia zwolnień</h3>
    </div>
    <div class="col-md-4 col-md-offset-1">
        <h3>Historia urlopów</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <table class="table">
            <thead>
                <tr>
                    <th>Data rozpoczęcia zwolnienia</th>
                    <th>Data zakończenia zwolnienia</th>
                    <th>Powód zwolnienia</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.workerExemptionsViewModel)
                {
                    <tr>
                        <td>
                            @item.ExemptionDateFrom.ToShortDateString()
                        </td>
                        <td>
                            @item.ExemptionDateTo.ToShortDateString()
                        </td>
                        <td>
                            @item.ExemptionReason
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4 col-md-offset-1">
        <table class="table">
            <thead>
                <tr>
                    <th>Data rozpoczęcia urlopu</th>
                    <th>Data zakończenia urlopu</th>
                    <th>Ilość dni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.workerVacationsViewModel)
                {
                    <tr>
                        <td>
                            @item.VacationDateFrom.ToShortDateString()
                        </td>
                        <td>
                            @item.VacationDateTo.ToShortDateString()
                        </td>
                        <td>
                            @item.TotalDays
                        </td>
                        @{ 
                            hoursSum = hoursSum + item.TotalDays;
                        }
                  </tr>
                }
            </tbody>
            <tfoot>
                <tr class="active">
                    <th></th>
                    <th>Suma</th>
                    <td>@hoursSum</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<br />
<div class="row">
    <div class="col-md-2 col-md-offset-5">
        <input type="button" value="Powrót" class="btn btn-primary" style="font-size: 20px" onClick="history.go(-1); return false;" />
    </div>
</div>




