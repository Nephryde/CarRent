@model CarRent.Models.EmployeeTraining

@{
    ViewData["Title"] = "AddWorkerTrainig";
    Layout = "~/Views/Shared/ManageLayout.cshtml";
}

<div class="row">
    <div class="col-md-2 col-md-offset-5">
        <h2>Dodaj szkolenie</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4">

        <form method="post" asp-controller="Worker" asp-action="AddWorkerTraining">
            <div class="form-group">
                <label asp-for="WorkerId"></label>
                <input class="form-control" asp-for="WorkerId" readonly value="@ViewData["workerId"]"/>
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="CourseId"></label>
                <input class="form-control" asp-for="CourseId" placeholder="Imię" required />
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="DateFrom"></label>
                <input class="form-control" asp-for="DateFrom" required />
                @*<span asp-validation-for="Surname" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="DateTo"></label>
                <input class="form-control" asp-for="DateTo" required />
                @*<span asp-validation-for="Address" class="text-danger"></span>*@
            </div>

            <input type="submit" value="Dodaj" class="btn btn-primary" />

        </form>

    </div>
</div>

