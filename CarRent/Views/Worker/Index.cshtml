@model IEnumerable<CarRent.Models.ViewModels.ListWorkersViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/ManageLayout.cshtml";
}

<div class="row">
    <div class="col-md-2 col-md-offset-5">
        <h2>Pracownicy</h2>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Imię i nazwisko</th>
                    <th>Warsztat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var worker in Model)
                {
                    <tr>
                        <td>@worker.Id</td>
                        <td>@worker.Name @worker.Surname</td>
                        <td>@worker.GarageName</td>
                        <td><a asp-controller="Worker" asp-action="WorkerDetails" asp-route-workerId="@worker.Id">Szczegóły</a></td>
                        <td><a href="#a">Edytuj</a></td>
                        <td><a href="#a">Usuń</a></td>
                        <td><a asp-controller="Worker" asp-action="AddWorkerTraining" asp-route-workerId="@worker.Id">Szkolenie</a></td>
                        <td><a href="#a">Zwolnienie</a>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



