@model CarRent.Models.Exemption

@{
    ViewData["Title"] = "AddWorkerExemption";
    Layout = "~/Views/Shared/ManageLayout.cshtml";
}

<div class="row">
    <div class="col-md-2 col-md-offset-5">
        <h2>Dodaj zwolnienie</h2>
    </div>
</div>

<form method="post" asp-controller="Worker" asp-action="AddWorkerExemption">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">


            <div class="form-group">
                <label asp-for="WorkerId"></label>
                <input class="form-control" asp-for="WorkerId" readonly value="@ViewData["workerId"]" />
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Reason"></label>
                <textarea class="form-control" asp-for="Reason" required></textarea>
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="DateFrom"></label>
                <input class="form-control" asp-for="DateFrom" required />
                @*<span asp-validation-for="Surname" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="DateTo"></label>
                <input class="form-control" asp-for="DateTo" required />
                @*<span asp-validation-for="Address" class="text-danger"></span>*@
            </div>



        </div>
    </div>

    <div class="row" style="text-align: center;">
        <div class="col-md-2 col-md-offset-5">
            <input type="submit" value="Dodaj" class="btn btn-primary" style="font-size: 20px; margin-right: 15px;" />
            <input type="button" value="Anuluj" class="btn btn-primary" style="font-size: 20px" onClick="history.go(-1); return false;" />
        </div>
    </div>
</form>
